{
  "name": "@vpoppy/ngx-translate-extract",
  "version": "8.0.0",
  "description": "Extract strings from projects using ngx-translate - Fork of @biesbjerg/ngx-translate-extract",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "bin/",
    "dist/"
  ],
  "bin": {
    "ngx-translate-extract": "bin/cli.js"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run clean && tsc",
    "watch": "npm run clean && tsc --watch",
    "clean": "rimraf ./dist",
    "lint": "tslint --force './src/**/*.ts'",
    "test": "cross-env TS_NODE_PROJECT=\"tsconfig.spec.json\" mocha -r ts-node/register tests/**/*.spec.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 145,
    "useTabs": true,
    "singleQuote": true
  },
  "lint-staged": {
    "{src,tests}/**/*.{ts}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/varun-datt/ngx-translate-extract/tree/custom-markers"
  },
  "keywords": [
    "angular",
    "ionic",
    "ngx-translate",
    "extract",
    "extractor",
    "translate",
    "translation",
    "i18n",
    "gettext"
  ],
  "author": "Varun Datt <35286616+varun-datt@users.noreply.github.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/varun-datt/ngx-translate-extract/issues"
  },
  "homepage": "https://github.com/varun-datt/ngx-translate-extract/tree/custom-markers",
  "engines": {
    "node": ">=11.15.0"
  },
  "config": {},
  "type": "module",
  "devDependencies": {
    "@types/braces": "^3.0.0",
    "@types/chai": "^4.2.16",
    "@types/flat": "^5.0.2",
    "@types/gettext-parser": "4.0.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.14.37",
    "braces": "^3.0.2",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^9.2.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.0",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "@angular/compiler": ">=15.0.0",
    "typescript": ">=4.0.0"
  },
  "dependencies": {
    "@angular/compiler": "^15",
    "@phenomnomnominal/tsquery": "^5",
    "boxen": "^7",
    "colorette": "^2",
    "flat": "^5.0.2",
    "gettext-parser": "^6",
    "glob": "^9",
    "path": "^0.12.7",
    "terminal-link": "^3.0.0",
    "yargs": "^17.3.1"
  }
}
