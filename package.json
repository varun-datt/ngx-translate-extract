{
  "name": "@vpoppy/ngx-translate-extract",
  "version": "9.0.0",
  "description": "Extract strings from projects using ngx-translate - Fork of @biesbjerg/ngx-translate-extract",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "bin/",
    "dist/"
  ],
  "bin": {
    "ngx-translate-extract": "bin/cli.js"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run clean && tsc",
    "watch": "npm run clean && tsc --watch",
    "clean": "rimraf ./dist",
    "lint": "tslint --force './src/**/*.ts'",
    "test": "cross-env TS_NODE_PROJECT=\"tsconfig.spec.json\" mocha -r ts-node/register tests/**/*.spec.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 145,
    "useTabs": true,
    "singleQuote": true
  },
  "lint-staged": {
    "{src,tests}/**/*.{ts}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/varun-datt/ngx-translate-extract/tree/custom-markers"
  },
  "keywords": [
    "angular",
    "ionic",
    "ngx-translate",
    "extract",
    "extractor",
    "translate",
    "translation",
    "i18n",
    "gettext"
  ],
  "author": "Varun Datt <35286616+varun-datt@users.noreply.github.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/varun-datt/ngx-translate-extract/issues"
  },
  "homepage": "https://github.com/varun-datt/ngx-translate-extract/tree/custom-markers",
  "engines": {
    "node": ">=11.15.0"
  },
  "config": {},
  "type": "module",
  "devDependencies": {
    "@angular/compiler": "^17",
    "@types/braces": "^3.0.0",
    "@types/chai": "^4.3.11",
    "@types/flat": "^5.0.2",
    "@types/gettext-parser": "4.0.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18",
    "braces": "^3.0.2",
    "chai": "^5.0.3",
    "cross-env": "^7.0.3",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^10.2.0",
    "prettier": "^2.2.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@angular/compiler": ">=17.0.0",
    "typescript": ">=5.2.0"
  },
  "dependencies": {
    "@phenomnomnominal/tsquery": "^6",
    "boxen": "^7",
    "colorette": "^2",
    "flat": "^5.0.2",
    "gettext-parser": "^6",
    "glob": "^10",
    "terminal-link": "^3.0.0",
    "yargs": "^17.3.1"
  }
}
