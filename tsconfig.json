{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "removeComments": true,
        "declaration": true,
        "target": "esnext",
        "lib": [
            "es2022",
            "DOM"
        ],
        "module": "es2022",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "typeRoots" : [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": []
}
